<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/adminDrawerLayout"
    android:layout_height="match_parent"
    android:background="@drawable/bgbg"
    tools:context=".Admin"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Time Tabling Portal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="285dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="765dp"
        android:text="WELCOME ADMIN"
        android:textAlignment="center"
        android:textColor="#050303"
        android:textSize="30sp"
        android:textStyle="bold" />

        <Button
            android:id="@+id/userOperations"
            android:layout_width="152dp"
            android:layout_height="138dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="220dp"
            android:layout_marginBottom="280dp"
            android:background="@drawable/btn"
            android:onClick="adminUserOperations"
            android:text="User Operations"
            android:textColor="#070404"
            android:textSize="20sp" />

        <Button
            android:id="@+id/batchOperations"
            android:layout_width="152dp"
            android:layout_height="138dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="220dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/btn"
            android:onClick="adminBatchOperations"
            android:text="Batch Operations"
            android:textSize="20sp" />

        <Button
            android:id="@+id/moduleOperations"
            android:layout_width="152dp"
            android:layout_height="138dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="222dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="280dp"
            android:background="@drawable/btn"
            android:onClick="adminModuleOperations"
            android:text="Module Operations"
            android:textColor="#090505"
            android:textSize="20sp" />

        <Button
            android:id="@+id/classroomOperations"
            android:layout_width="152dp"
            android:layout_height="138dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="222dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/btn"
            android:onClick="adminClassroomOperations"
            android:text="Class-Room Operations"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/sys" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="70dp"
            android:text="Admin Dashboard"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="29dp"
            android:textStyle="normal" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />

</androidx.drawerlayout.widget.DrawerLayout>