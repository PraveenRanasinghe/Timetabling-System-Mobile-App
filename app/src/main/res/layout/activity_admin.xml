<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="93dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="319dp"
        android:layout_marginBottom="656dp"
        app:srcCompat="@drawable/settings" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="285dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="687dp"
        android:text="WELCOME ADMIN"
        android:textAlignment="viewStart"
        android:textColor="#050303"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/userOperations"
        android:layout_width="152dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="380dp"
        android:background="@drawable/buttons"
        android:onClick="adminUserOperations"
        android:text="User Operations"
        android:textColor="#070404"
        android:textSize="20sp" />

    <Button
        android:id="@+id/batchOperations"
        android:layout_width="152dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/buttons"
        android:onClick="adminBatchOperations"
        android:text="Batch Operations"
        android:textSize="20sp" />

    <Button
        android:id="@+id/moduleOperations"
        android:layout_width="152dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="222dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="380dp"
        android:background="@drawable/buttons"
        android:onClick="adminModuleOperations"
        android:text="Module Operations"
        android:textColor="#090505"
        android:textSize="20sp" />

    <Button
        android:id="@+id/classroomOperations"
        android:layout_width="152dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="222dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/buttons"
        android:onClick="adminClassroomOperations"
        android:text="Class-Room Operations"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="358dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="562dp"
        app:srcCompat="@drawable/homeicon" />

</RelativeLayout>