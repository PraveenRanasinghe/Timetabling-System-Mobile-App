<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="185dp">

    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/batch_card"
        android:padding="20dp">


        <TextView
            android:id="@+id/AbatchId"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="APIIT_001"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="60dp"
            android:text="Date of Commencement"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="68dp"
            android:text="Date of Termination"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/AterminationDate"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AbatchName"
            android:layout_width="283dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="42dp"
            android:text="Software Engineering"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AcommencementDate"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>