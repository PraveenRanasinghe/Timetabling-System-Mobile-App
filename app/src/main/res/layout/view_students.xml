<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="155dp">

    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_card"
        android:padding="20dp">


        <TextView
            android:id="@+id/studFname"
            android:layout_width="280dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="182dp"
            android:text="Praveen"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/studLname"
            android:layout_width="280dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="172dp"
            android:layout_marginEnd="35dp"
            android:text="Ranasinghe"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="50dp"
            android:text="Learning Batch"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="50dp"
            android:text="Contact Number"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/studContactNum"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="75dp"
            android:text="+9471-5268748"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/studEmail"
            android:layout_width="283dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="42dp"
            android:text="praveen@gmail.com"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/learningBatch"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="0dp"
            android:text="APIIT_001"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/user_square" />

        <ImageView
            android:id="@+id/removeStud"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="305dp"
            app:srcCompat="@drawable/delete2"/>

        <ImageView
            android:id="@+id/callStudent"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="75dp"
            app:srcCompat="@drawable/call" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>