<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp">

    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="220dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/card_module"
        android:padding="20dp">


        <TextView
            android:id="@+id/MmoduleId"
            android:layout_width="283dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="42dp"
            android:text="MOD_001"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="70dp"
            android:text="Learning Batches"
            android:textSize="18dp"
            android:textStyle="italic"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="70dp"
            android:text="Lecturer"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/lecFName"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="80dp"
            android:text="Mr.Nipunu"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/lecLName"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="270dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="0dp"
            android:text="Wijesinghe"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/scheduleButton"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/add_button"
            android:text="Schedule Class"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/MmoduleName"
            android:layout_width="283dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="42dp"
            android:text="Enterprise Applications"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/MlearningBatches"
            android:layout_width="150dp"
            android:layout_height="76dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="10dp"
            android:text="APIIT_001 APIIT_002 APIIT_003"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>