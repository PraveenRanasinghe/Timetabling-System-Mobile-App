<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="185dp">

    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/card_module"
        android:padding="20dp">


        <TextView
            android:id="@+id/MmoduleId"
            android:layout_width="283dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="82dp"
            android:text="MOD_001"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/mname"
            android:layout_width="283dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="250dp"
            android:text="Module Id:"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="Learning Batches"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="50dp"
            android:text="Lecturer"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lecFName"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="80dp"
            android:text="Mr.Nipunu"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lecLName"
            android:layout_width="360dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="270dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="0dp"
            android:text="Wijesinghe"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/scheduleButton"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/add_button"
            android:text="Schedule Class"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/removeModule"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="302dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/delete2" />

        <TextView
            android:id="@+id/MmoduleName"
            android:layout_width="283dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="42dp"
            android:text="Enterprise Applications"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/MlearningBatches"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="0dp"
            android:text="APIIT_001 APIIT_002 APIIT_003"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>