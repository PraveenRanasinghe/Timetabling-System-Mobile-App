<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:id="@+id/lecCardView">

    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="220dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/card_schedule"
        android:padding="20dp">


        <TextView
            android:id="@+id/batchIdA"
            android:layout_width="385dp"
            android:layout_height="35dp"
            android:text="APIIT_001"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moduleIdA"
            android:layout_width="283dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="180dp"
            android:text="EIRLS"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/dateA"
            android:layout_width="283dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="4dp"
            android:text="8/13/2021"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lNameLec"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="95dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="100dp"
            android:text="Ranasinghe"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/fNameLec"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="255dp"
            android:layout_marginBottom="100dp"
            android:text="Praveen"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/startTimeA"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="95dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="65dp"
            android:text="11:00 AM"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/stime"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="250dp"
            android:layout_marginBottom="65dp"
            android:text="Start Time:"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/endTimeA"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="95dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="35dp"
            android:text="13:00PM"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/etime"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="250dp"
            android:layout_marginBottom="35dp"
            android:text="End Time:"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/cancel_btn"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/rescheduleBtn"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="180dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/schedule_btn"
            android:text="Reschedule"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/classRoomIdA"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="200dp"
            android:layout_marginBottom="40dp"
            android:text="L1LB1"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/venue"
            android:layout_width="283dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="35dp"
            android:text="Venue"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>