<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    >

    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_card"
        android:padding="20dp">


        <TextView
            android:id="@+id/lecFName"
            android:layout_width="283dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="195dp"
            android:text="Disal"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lecLName"
            android:layout_width="288dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="160dp"
            android:layout_marginEnd="46dp"
            android:text="Subasinghe"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal" />


        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="60dp"
            android:text="Contact Number"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lecContactNum"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="100dp"
            android:text="+9471-5268748"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lecEmail"
            android:layout_width="283dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="80dp"
            android:text="disal@gmail.com"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:textStyle="normal" />


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginStart="300dp"
            android:src="@drawable/user_square" />

        <ImageView
            android:id="@+id/callBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="85dp"
            android:src="@drawable/call" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/mail" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>