<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="682dp"
        android:background="@drawable/header"
        android:text="Add New Batch"
        android:textAlignment="center"
        android:textColor="#0C0707"
        android:textSize="36sp" />


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="750dp"
        android:text="Now you can create New Batches In the Institute here!"
        android:textAlignment="center"
        android:textColor="#0E0808"
        android:textSize="16sp" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="544dp"
        android:background="@drawable/custom_input"
        android:id="@+id/batchId"
        android:hint="APIIT_any"
        android:inputType="textUri"
        android:padding="10dp"
        android:textColor="#0C0707" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="213dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="592dp"
        android:text="Batch ID"
        android:textAlignment="center"
        android:textColor="#090505"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="206dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="484dp"
        android:text="Batch Name"
        android:textAlignment="center"
        android:textColor="#0B0606"
        android:textSize="20sp" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="435dp"
        android:background="@drawable/custom_input"
        android:hint="SE batch"
        android:id="@+id/batchName"
        android:inputType="textUri"
        android:padding="10dp"
        android:textColor="#0C0707" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="233dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="375dp"
        android:text="Date of Commencement"
        android:textColor="#050303"
        android:textSize="20sp" />

    <Button
        android:id="@+id/dateOfCommencement"
        style="?android:spinnerStyle"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="324dp"
        android:background="@drawable/custom_input"
        android:onClick="openDatePicker"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="mm-dd-yyyy" />

    <Button
        android:id="@+id/dateOfTermination"
        style="?android:spinnerStyle"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="211dp"
        android:background="@drawable/custom_input"
        android:onClick="openDatePicker"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="mm-dd-yyyy" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="237dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="262dp"
        android:text="Date of Termination"
        android:textAlignment="center"
        android:textColor="#0B0606"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="103dp"
        android:background="@drawable/add_button"
        android:onClick="createBatch"
        android:text="Create Batch"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="196dp"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="682dp"
        android:src="@drawable/batch" />
</RelativeLayout>