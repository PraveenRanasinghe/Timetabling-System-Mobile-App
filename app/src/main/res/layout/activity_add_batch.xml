<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbg">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:backgroundTint="#815AB8"
            android:src="@drawable/home_fab"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="Add New Batch"
        android:textAlignment="center"
        android:textColor="#0C0707"
        android:textSize="36sp" />


    <EditText
        android:id="@+id/batchId"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="510dp"
        android:background="@drawable/custom_input"
        android:hint="APIIT_any"
        android:inputType="textUri"
        android:padding="10dp"
        android:textColor="#0C0707" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="213dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="550dp"
        android:text="Batch ID"
        android:textAlignment="center"
        android:textColor="#090505"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="206dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="450dp"
        android:text="Batch Name"
        android:textAlignment="center"
        android:textColor="#0B0606"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/batchName"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/custom_input"
        android:hint="SE batch"
        android:inputType="textUri"
        android:padding="10dp"
        android:textColor="#0C0707" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="233dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="325dp"
        android:text="Date of Commencement"
        android:textColor="#050303"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/commencementDate"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="285dp"
        android:background="@drawable/custom_input"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="mm-dd-yyyy" />

    <Button
        android:id="@+id/selectDate"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="320dp"
        android:layout_marginBottom="285dp"
        android:backgroundTint="#B53AEA"
        android:text="select"
        android:textAlignment="center"
        android:textSize="10dp" />


    <TextView
        android:id="@+id/terminationDate"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/custom_input"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="mm-dd-yyyy" />

    <Button
        android:id="@+id/selectDate2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="320dp"
        android:layout_marginBottom="180dp"
        android:backgroundTint="#B53AEA"
        android:textAlignment="center"
        android:textSize="10dp"
        tools:text="select" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="237dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="220dp"
        android:text="Date of Termination"
        android:textAlignment="center"
        android:textColor="#0B0606"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/add_button"
        android:onClick="createBatch"
        android:text="Create Batch"
        android:textSize="18sp" />

</RelativeLayout>